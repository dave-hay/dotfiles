#!/bin/bash

# ez git commands

case $1 in
    add | a)
        git add .
        git commit -m "$2"
        echo -n "âœ… commited, you all good homie ğŸ«¡"
        ;;
    push | p)
        git push -u origin main
        echo -n "pushin' ğŸ…¿ï¸ homie"
        ;;
      lb)
        # last branch
        git checkout -
        ;;
      nb)
        # new branch
        git checkout -b "$2"
        ;;
      db)
        # delete branch
        git branch -D "$2"
        ;;
    hub | h)
        git add .
        git commit -m "$2"
        git push -u origin main
        echo -n "pushin' ğŸ…¿ï¸ homie"
        ;;
    amen)
        git add .
        git commit --amend --no-edit
        echo -n "amended brother ğŸ™"
        ;;
    reset)
        git reset
        git checkout .
        echo -n "all done"
        ;;
    clear)
        git rm -rf --cached .
        echo -n "files cleared"
        ;;
    help | -h)
        echo "dont worry lad ğŸ¤™"
        echo "ğŸ“ commands are..."
        echo "add, push, hub, amen, amend"
        echo "reset"
esac

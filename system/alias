####################################
##                                ##
##  alias to be lazy as possible  ##
##                                ##
####################################
####################################


# go backwards
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# ez file nav
alias dot="cd ~/dotfiles"
alias dt="cd ~/Desktop"
alias proj="cd ~/code/projects"
alias ghub="cd ~/code/github"
alias misc="cd ~/code/misc"
alias sc="cd ~/code/misc/scratch"
alias edu="cd ~/code/edu"

# python
alias python="python3"
alias py="python3"
alias pip="pip3"
alias pyactivate='. env/bin/activate'
alias pyenv='python3 -m venv env'
alias pysrc='source "venv/bin/activate"'
alias pypy='pypy3'
alias pypypip='pip_pypy3 install'

# unix commands
alias ls="gls --color"
alias cl="clear"
alias restart="exec zsh"
alias deldir="rm -rf"
alias l="ls -la"       # List in long format, include dotfiles

# Homebrew
alias brud="brew update; brew outdated;"
alias brod="brew outdated"
alias brup="brew upgrade"
alias brls="brew list"
alias brun='brew uninstall'
alias brin='brew install'
alias brcl='brew cleanup'
alias brar='brew autoremove'

# neovim
alias vim="nvim"
alias vimup='brew reinstall neovim'
alias vimpwd='vim --cmd "set rtp+=$(pwd)"'
alias packerup="nvim --headless -c 'autocmd User PackerComplete quitall' -c 'PackerSync'"

# npm
alias np='npm'
alias npr='npm run'
alias npms='npm start'
alias npmd='npm run dev'
alias npmt='npm run test'
alias npmi='npm install'
alias npmid='npm install -D'
alias npmu='npm uninstall'
alias npmup='npm install -g npm@latest && npm update -g'

# yarn
alias y='yarn'
alias ys='yarn start'
alias yd='yarn dev'
alias yt='yarn test'
alias ya='yarn add'
alias yr='yarn remove'
alias yad='yarn add -D'

# pnpm
alias pn="pnpm"
alias pna="pnpm add" # npm i
alias pnad="pnpm add -D"
alias pnrm="pnpm remove"
alias pnt="pnpm test"
alias pnls="pnpm ls"
alias pnup="pnpm add -g pnpm"
alias pnud="pnpm update"
alias pni="pnpm install"
alias pnod="pnpm outdated"
alias pns="pnpm start"
alias pnd="pnpm run dev"
alias pnb="pnpm run build"

# tmux
alias tm='tmux'
alias tmls='tmux ls'
alias tmns='tmux new -s'
alias tmas='tmux attach -t'
alias tmrs='tmux rename-session -t'

# go
alias gor='go run .'

# rust
alias cr='cargo run'
alias cb='cargo build'
alias ca='cargo add'

# redis
alias redisstart='brew services start redis'
alias redisinfo='brew services info redis'
alias redisstop='brew services stop redis'

# etc
alias zshup='omz update' # update oh-my-zsh
alias gtype='gtypist -w'
alias lg='lazygit'
alias see='tree --gitignore'
alias ndoe='node'
